@using System.IO
@model TrainingSystem.Domain.Trainee
@{
    ViewData["Title"] = "Edit Trainee";
}
<h2>Edit Trainee </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEdit">
            <input id="ValueID" value"@Model.section.ID" asp-for="ID" type="hidden"/>
            <div class="form-group">
                <label class="control-label">SectionField</label>
                <select id="myInput" onchange="    getInputValue();" asp-for="SectionLookupID" class="form-control" asp-items="ViewBag.SectionLookupID">
                    <option value="">-- Section Field -- </option>
                </select>
                <span asp-validation-for="SectionLookupID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="control-label">Trainer</label>
                <select asp-for="TrainerID" class="form-control" asp-items="ViewBag.TrainerID">
                    <option value="">-- Trainer -- </option>
                </select>
                <span asp-validation-for="TrainerID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @if (ViewBag.ErrorMessag == null)
                {
                    <p style="color:red;"> @ViewBag.ErrorMessage</p>
                }
            </div>
            

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input type="text" asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraduationDate" class="control-label"></label>
                <input asp-for="GraduationDate" class="form-control" />
                <span asp-validation-for="GraduationDate" class="text-danger"></span>
            </div>
            <div class="from-group">
                @if (ViewBag.CreateOrEdit == "Edit Trainee")
                {
                    @if (Model.CV != null)
                    {
                        <a class="btn btn-success" class="btn-default" asp-action="ViewCVFile" asp-route-id="@Model.ID">
                            @Html.DisplayFor(modelItem => @Model.CVFileName)
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-success" class="btn-default" asp-action="AddCVFile" asp-route-id="@Model.ID">Upload CV File</a>
                    }
                }
                </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back To Trianees</a>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/TableExport/5.2.0/js/tableexport.min.js" integrity="sha512-XmZS54be9JGMZjf+zk61JZaLZyjTRgs41JLSmx5QlIP5F+sSGIyzD2eJyxD4K6kGGr7AsVhaitzZ2WTfzpsQzg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
}
    <script>
        function getInputValue() {
            var inputVal = document.getElementById("myInput").value;
            var ID = document.getElementById("ValueID").value;
            var a = document.evaluate('//a[contains(href, "playnow")]', document, null, XPathResult.ORDERED_NODE_SNAPSHOT_TYPE, null);
            if (a) {
                window.location.href = '@Url.Action("CreateEdit","Trainee")' +  '?SectionLookupID=' + inputVal;
            }
        }
    </script>