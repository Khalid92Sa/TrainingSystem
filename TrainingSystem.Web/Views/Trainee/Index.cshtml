@{
    ViewData["Title"] = "Trainees";
}
@model IEnumerable<TrainingSystem.Domain.Trainee>
<h1>@ViewBag.Title</h1>
<div class="mb-1">
    <p>
        <form class="mb-2" asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    @*<input type="text" name="SearchStringByID" value="@ViewData["SearchByID"]" placeholder="SearchByID" style="width:90px"/>*@
                     <input type="number" name="SearchStringByID" value="@ViewData["SearchByID"]" placeholder="ID" min="0" max="3000" style="width:70px"/>
                    <input type="text" name="SearchStringByName" value="@ViewData["SearchByName"]" placeholder="SearchByName" style="width:110px"/>
                    <select class="form-select form-control-sm mb-1 ml-2" asp-items="@ViewBag.SectionField" name="Section" style="width:150px">
                    @if (ViewBag.Section == null)
                    {
                        <option value="">--Section Field--</option>
                    }
                    else
                    {
                        <option value="@ViewBag.Section">
                            @ViewBag.SectionFieldResult
                        </option>
                    }
                    <option value="NotIncludeSection">Not Include Section</option>
                </select>
                <select class="form-select form-control-sm mb-1 ml-2" name="Status" style="width:100px">
                    @if (ViewBag.Status == null)
                    {
                        <option value="">--Status--</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Active">Active</option>
                    }
                    else
                    {
                        @if (ViewBag.Status == "Inactive")
                        {
                            <option value="Inactive">Inactive</option>
                            <option value="Active">Active</option>
                        }
                        else
                        {
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>

                        }}

                </select>
                
                </p>
            </div>
            <div class="form-actions no-color">
                <p>
                    <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
            <div class="form-actions no-color">
                
            </div>
            <div class="form-actions no-color">
                
            </div>
            <div class="form-actions no-color">
                <p>
                    
                </p>
            </div>
        </form>
        <a class="btn btn-success btn-sm" asp-action="CreateEdit">Add New Trainee</a>
        <button id="btnGroupDrop1" type="button" class="btn btn-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Export To
        </button>
        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
            <li><a class="dropdown-item" id="exportTableToExcel">Excel</a></li>
            <li><a class="dropdown-item" id="print">PDF</a></li>
        </ul>
    </p>
</div>
<table class="table mytable" id="mytable">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Section field
            </th>
            <th>
                GraduationStatus
            </th>
            <th>
                CV
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idstring)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.SectionID == null)
                    {
                        <p>Not Include Section</p>
                    }
                    else
                    {

                        @Html.DisplayFor(modelItem => item.Section.SectionField.SectionField)
                    }
                    </td>
                    <td>
                        @{
                        var result = "";
                        @if (item.GraduationStatus)
                        {
                            result = "Active";
                        }
                        else { result = "Inactive"; }
                    }
                    @result

                </td>
                <td>
                    @if (@item.CV == null)
                    {
                        <a class="btn-default" asp-action="AddCVFile" asp-route-id="@item.ID">AddCVFile</a>
                    }

                    else
                    {
                        <a class="btn-default" asp-action="ViewCVFile" asp-route-id="@item.ID">
                            @Html.DisplayFor(modelItem => item.CVFileName)
                        </a>
                    }
                </td>
                <td>
                    <a class="btn-default" asp-action="CreateEdit" asp-route-id="@item.ID">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/TableExport/5.2.0/js/tableexport.min.js" integrity="sha512-XmZS54be9JGMZjf+zk61JZaLZyjTRgs41JLSmx5QlIP5F+sSGIyzD2eJyxD4K6kGGr7AsVhaitzZ2WTfzpsQzg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>



    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>





    <script>
        var ele2 = document.getElementById('mytable');
        console.log(ele2)
        $("#print").click(function() {
            var ele1 = document.querySelectorAll(".DontTakeInPDF").forEach(e => e.remove());
            var ele = document.getElementById('mytable');
            console.log(ele)
            html2pdf().from(ele).set({
                pagebreak: { avoid: 'tr' },
                filename: 'Trainees.pdf',
                jsPDF: { orientation: 'landscape', unit: 'pt', format: 'letter', compressPDF: true }
            }).save()
            ele = ele2;
            setTimeout("location.reload(true);", 500);
        });

        $("#exportTableToExcel").click(function() {
            var ele1 = document.querySelectorAll(".DontTakeInPDF").forEach(e => e.remove());
            var ele = document.getElementById('mytable');
            $("#mytable").table2excel({
                filename: "Trainees",
                excepte: "DontTakeInPDF"
            });
            ele = ele2;
            setTimeout("location.reload(true);", 500);
        });
    </script>
}

