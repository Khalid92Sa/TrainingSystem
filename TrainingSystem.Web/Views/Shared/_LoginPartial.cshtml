@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <nav class="navbar navbar-inverse navbar-fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Home" asp-action="Welcome" class="navbar-brand">TrainingSystem</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ReportingPage">Reporting</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Section" asp-action="Index">Sections</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Trainers" asp-action="Index">Trainers</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Programs" asp-action="Index">Programs</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Trainee" asp-action="Index">Trainees</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Welcome">Hello @UserManager.GetUserName(User)!</a>
                    </li>

                    <li class="nav-item">
                        <form class="form-inline" asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

}
