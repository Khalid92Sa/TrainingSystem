@{
    ViewData["Title"] = "ViewTrainees";
}
@model TrainingSystem.Domain.Section
<h2>View Trainees For Section</h2>
<div class="form-group">
    <label class="control-label">Section ID: @Model.ID</label>
    <input value="@Model.ID" type="hidden" />
</div>
<div class="form-group">
    <label class="control-label">Section Name: @Model.SectionField.SectionField</label>
</div>
<div class="form-group">
    <label class="control-label">Trainer Name: @Model.Trainer.Name</label>
</div>
<div class="form-group">
    <label class="control-label">Start Date: @Model.StartDate.ToShortDateString()</label>
</div>
<div class="form-group">
    <label class="control-label">End Date: @Model.EndDate.ToShortDateString()</label>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
    </div>
</div>
<table class="table mytable" id="mytable">
    <thead>
        <tr>
            <th>
                Traainee ID
            </th>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var trainees = ViewBag.Trainees;
            foreach (var trainee in trainees)
            {
                <tr>
                    <td>
                        @if (@trainee.TraineeID < 10)
                        {
                            string x = "TE-0" + @trainee.TraineeID;
                            <p>@x</p>
                        }
                        else
                        {
                            <p>TE-@trainee.TraineeID</p>
                        }
                    </td>
                    <td>
                        @trainee.Name
                    </td>
                    <td>
                        @if (@trainee.Status)
                        {
                            <p>Active</p>
                        }
                        else
                        {
                            <p>Inactive</p>
                        }
                    </td>
                    <td>
                        @trainee.Email
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back To Sections</a>
</div>